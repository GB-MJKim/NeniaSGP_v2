<Page x:Class="Nenia.SGP.Views.ProductListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:Nenia.SGP.Converters"
      Loaded="Page_Loaded">

    <Page.Resources>
        <converters:PathToImageSourceConverter x:Key="PathToImage"/>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="20">
            <TextBlock Text="상품 목록" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="추가" Width="120" Height="36"
                    DockPanel.Dock="Right"
                    Click="Add_Click"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,10">
            <TextBox x:Name="SearchBox" Width="260" Height="32" VerticalContentAlignment="Center"/>
            <Button Content="검색" Width="90" Height="32" Margin="10,0,0,0" Click="Search_Click"/>
            <Button Content="전체" Width="90" Height="32" Margin="10,0,0,0" Click="Reload_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="ProductGrid" Margin="20"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="이미지" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Width="60" Height="60" Stretch="UniformToFill"
                   Source="{Binding ThumbnailImagePath, Converter={StaticResource PathToImage}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="ID" Width="60" Binding="{Binding ProductID}"/>
                <DataGridTextColumn Header="상품명" Width="*" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="용량" Width="100" Binding="{Binding Capacity}"/>
                <DataGridTextColumn Header="페이지" Width="80" Binding="{Binding PageNumber}"/>
                <DataGridTextColumn Header="순번" Width="80" Binding="{Binding OrderInPage}"/>
                <DataGridTextColumn Header="표준가" Width="100" Binding="{Binding StandardPrice}"/>
                <DataGridTemplateColumn Header="작업" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="수정" Width="60" Margin="0,0,6,0" Click="Edit_Click"/>
                                <Button Content="삭제" Width="60" Click="Delete_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        
        
       

        <TextBlock Grid.Row="3" x:Name="StatsText" Margin="20,0,20,20" Foreground="Gray"/>
    </Grid>
</Page>
