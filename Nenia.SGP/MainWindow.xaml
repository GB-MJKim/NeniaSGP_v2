<Window x:Class="Nenia.SGP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeniaSGP v2" Height="900" Width="1600">
    <DockPanel>
        <Border DockPanel.Dock="Left" Width="220" Background="#202020">
            <StackPanel Margin="10">
                <TextBlock Text="NeniaSGP" Foreground="White" FontSize="24" FontWeight="Bold" Margin="6"/>
                <Separator Margin="6"/>

                <ListBox x:Name="Menu"
                         SelectionChanged="Menu_SelectionChanged"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White">
                    <ListBoxItem Content="상품 목록" Tag="ProductList"/>
                    <ListBoxItem Content="지역 관리" Tag="RegionManagement"/>
                    <ListBoxItem Content="페이지 배치" Tag="PageLayout"/>
                    <ListBoxItem Content="단가 설정" Tag="PriceSetting"/>
                    <ListBoxItem Content="백업" Tag="Backup"/>
                </ListBox>
            </StackPanel>
        </Border>

        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
